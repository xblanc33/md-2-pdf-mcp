{
  "name": "mcp-pdf",
  "version": "1.0.0",
  "description": "An MCP server that converts Markdown to PDF using Playwright.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prepare": "tsc -p tsconfig.json",
    "postinstall": "playwright install chromium || echo 'Playwright install skipped'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pdf",
    "markdown",
    "playwright",
    "server",
    "cli"
  ],
  "author": "Xavier Blanc (xblanc33)",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "mcp-pdf": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "marked": "^12.0.2",
    "playwright": "^1.47.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
